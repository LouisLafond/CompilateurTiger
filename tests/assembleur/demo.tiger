let                                             /* let in end */
    var a := 0                                  /* déclaration de variable : int */
    var grandparent := 1
    var parent := 3
    var oui = "oui"                             /*  déclaration de variable : string */
    var b := -3                                 /* négation */

    function fib(n:int) =(                      /* déclaration de fonction : avec argument*/
        for i := 2 to n do (                    /* boucle for */
            a := 3 * parent - grandparent;      /* visiter une variable, et multiplication, soustraction */
            grandparent := parent;              /* assignement */
            parent := a
        );
        a
    )

    function autre() =(                             /* déclaration de fonction : sans argument*/
        while b<0 do (                              /* boucle while + comparaison < */
            if b:=-1 then (                         /* if then break */
                break );
            if a>=4 then (b:=b+1) else ( b:=b+2)    /* if then else + comparaison >= */
        )
    )
in
    a := fib(5);                                 /* appel de fonction */ 
    autre()
    
end